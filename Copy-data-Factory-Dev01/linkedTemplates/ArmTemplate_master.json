{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "Copy-data-Factory-Dev01"
		},
		"ArchBlobStoreSqlDb_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ArchBlobStoreSqlDb'"
		},
		"SqlDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SqlDB'"
		},
		"ArchBlobSqlDb_properties_typeProperties_fileName": {
			"type": "string",
			"defaultValue": "file.txt"
		},
		"ArchBlobSqlDb_properties_typeProperties_folderPath": {
			"type": "string",
			"defaultValue": "@concat('sqldb-archival/',dataset().path)"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas Token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ArchBlobStoreSqlDb_connectionString": {
						"value": "[parameters('ArchBlobStoreSqlDb_connectionString')]"
					},
					"SqlDB_connectionString": {
						"value": "[parameters('SqlDB_connectionString')]"
					},
					"ArchBlobSqlDb_properties_typeProperties_fileName": {
						"value": "[parameters('ArchBlobSqlDb_properties_typeProperties_fileName')]"
					},
					"ArchBlobSqlDb_properties_typeProperties_folderPath": {
						"value": "[parameters('ArchBlobSqlDb_properties_typeProperties_folderPath')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}